<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Industrial Machine Interface" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Select Machine Profile:" Margin="0,0,0,5" FontWeight="Bold"/>
            <ComboBox x:Name="CboMachineSelector" 
                      DisplayMemberPath="MachineName" 
                      SelectionChanged="CboMachineSelector_SelectionChanged"
                      Width="250" 
                      HorizontalAlignment="Left"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0">
            <StackPanel x:Name="MainModuleContainer">
                <TextBlock Text="No machine loaded. Please select a profile above." 
                           Foreground="Gray" 
                           FontStyle="Italic" 
                           HorizontalAlignment="Center" 
                           Margin="0,50,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="20" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnSave" 
                    Content="SAVE DATA" 
                    Click="BtnSave_Click"
                    Width="150" Height="40" 
                    Background="#28A745" Foreground="White" 
                    FontWeight="Bold"/>
                <Button x:Name="BtnStartMachine" 
                        Content="START MACHINE" 
                        Click="BtnStartMachine_Click"
                        Width="150" Height="40" 
                        Background="#28A745" Foreground="White" 
                        FontWeight="Bold" Margin="10,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>